#!/bin/bash

function whatis() {
	cuseco=$(basename $0)
 echo -e "\033[38;5;118m${cuseco}	‚áí 	\\033[38;5;11mtype:\\033[38;5;118mpy ‚áí run, vim(PENDING) filecollections, pyfiles, oop-completebootcamp"
echo -e "	\\033[38;5;195m Run the py scripts en la file collection del Complete Bootcamp \\033[38;5;11m‚≠ê\\033[38;5;195m porque no s√© usar PYTHONPATH \\033[38;5;11m‚≠ê\\033[38;5;195m \\033[38;5;212m‚ù§Ô∏èÔ∏è \\n\\033[38;5;43m\tüëâ\t\033[38;5;11m${cuseco} -$o\033[0m"
}

## SOURCES
##VARS-FILES
##FUNCTIONS
source Opte.fu
source Asksure.fu
source GralGetops.fu 

function whichpyscr() {
	if [[ ! $1 ]]; then
	   tree ${PYTHONPATH} 
	   echo -e "\033[38;5;118m"
	   read -p "Select ‚Üí " pyscr
	else
		pyscr=$1
	fi
}

##DIRECTORIES
##FILES
#VARIABLES
PYTHONPATH=/Users/violetagonzalezgarcia/gitclones/.filecollections_vio/pyfiles/oop-completebootcamp/
### MAIN
while getopts ":eh" o; do
    #gralGetops
	case "${o}" in
		e)
			opte
			exit
			;;
		h)
			whatis
			exit
			;;
		i)
			whichpyscr
			vim ${pyscr} 
			exit
			;;	
	esac
done
shift $((OPTIND-1))
# ‚ô•

### MAIN
whichpyscr
python ${PYTHONPATH}/${pyscr}   
