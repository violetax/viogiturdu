	cuseco=$(basename $0)
	echo -e "\033[38;5;118m${cuseco} â‡’  \033[38;5;11mtype:\033[38;5;118msalud â‡’  wdisplay"
	echo -e "\033[38;5;195m display \033[38;5;11mâ­ un butt ejercicio \033[38;5;11mâ­ \033[38;5;195m cada \033[38;5;212m crontime â¤ï¸ï¸ 
