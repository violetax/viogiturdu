#FUNCTIONS
function echoSourceval() {
	dsourcevalsfile=$3
	[[ ! -f ${dsourcevalsfile} ]] && touch ${dsourcevalsfile}
	sourceval=$(echo "var $1 = \"$2\"")
	sed -i '' "1i\
${sourceval} 
" ${dsourcevalsfile}  
}

function meat() {
	cd $1
	/Users/violetagonzalezgarcia/gitclones/bin/workondom/makepdf/may2022-edited-makepdf-mejorable.sh -a
}

function okunow() {
