#!/bin/bash

function whatis() {
	cuseco=$(basename $0)
 echo -e "\e[38;5;118m${cuseco}	â‡’ 	\\e[38;5;11mtype:\\e[38;5;118mpy â‡’  vim, like source text, chmod"
echo -e "	\\e[38;5;195m Create a py file con el name del current directory \\e[38;5;11mâ­\\e[38;5;195m opy \\e[38;5;11mâ­\\e[38;5;195m \\e[38;5;212mâ¤ï¸ï¸ \\n\\e[38;5;43m\tðŸ‘‰\t\e[38;5;11m${cuseco} -$o\e[0m"
}

## SOURCES
##VARS-FILES
##FUNCTIONS
source Opte.fu
source Asksure.fu
source GralGetops.fu 

function create() {
	touch $1
	echo -e "#!/usr/bin/python3" >> $1
	chmod +x $1
	vim $1
}


##DIRECTORIES
##FILES
#VARIABLES
presuf=py
thisd=$(pwd | awk -F "/" '{print $NF}')
fname="${presuf}_${thisd}.${presuf}"  

### MAIN
while getopts ":eh" o; do
    gralGetops
done
shift $((OPTIND-1))

if [[ ! ${fname} ]]; then
	create ${fname}   
else
	vim ${fname}  
fi
