#!/bin/bash

function whatis() {
	cuseco=$(basename $0)
 echo -e "\e[38;5;118m${cuseco}	‚áí 	\\e[38;5;11mtype:\\e[38;5;118mvio-basadmin ‚áí  clog ‚Üí vim bash-clog by date as $1"
echo -e " \e[38;5;11mDE MOMENTO :  \\\e[38;5;195m Ver el clog del d√≠a \$1 \\e[38;5;11m‚≠ê\\e[38;5;195m solo 2022 \\e[38;5;11m‚≠ê\\e[38;5;195m \\e[38;5;212m‚ù§Ô∏èÔ∏è \\n\\e[38;5;43m\tüëâ\t\e[38;5;11m${cuseco} 15\e[0m"
}

## SOURCES 
##VARS-FILES
##FUNCTIONS 
source Opte.fu
source Asksure.fu
function showdays() {
	echo -e "\e[38;5;11m"	
	ls ${clogdir} | grep -o "2022[^\.]*"
}
function selectplus() {
   echo -e "\e[38;5;118mSelect day and continue??"
   if asksure; then
	   echo -e "\e[38;5;118m"  
	   tosel=()
	   let count=0
	   for da in $(showdays)
	   do
		  [[ ${count} > 0 ]] && tosel+="${da} "
		  let count=${count}+1 
	   done
	   select ddate in $(echo ${tosel[@]})
	   do
		   ddate=${ddate}
		  break
	   done 
   else
	   echo -e "\e[38;5;212m‚ù§Ô∏èÔ∏è  ‚ù§Ô∏èÔ∏è  ‚ù§Ô∏èÔ∏è  ‚ù§Ô∏èÔ∏è  Ciao \\e[38;5;118m!!!!!!!‚≠êü§ó ü§ó!!"  
	   exit
   fi
}	   
function dmain() {
	clogfile=$(ls ${clogdir}/*2022* | grep ${ddate} )
	if [[ -f ${clogfile} ]]; then
	   vim ${clogfile}  
	else
		echo -e "\e[38;5;9m no existe clog del \\e[38;5;195m ${ddate} \\e[38;5;212m!!!"
	fi	
}
##DIRECTORIES
clogdir=/home/violeta/.clogs
curdir=$(pwd)
##FILES 
#VARIABLES
if [[ ! $1 ]]; then
	echo -e "\e[38;5;14mEl d√≠a co√±o!!!!"
	exit
elif [[ $1 == "y" ]]; then
	ddate=$(date -d '-1 day' +%Y-%m-%d)
elif [[ $1 == "h" ]]; then
	ddate=$(date +%Y-%m-%d)
else
	dday=$1
	if [[ $2 ]]; then
		dmonth=$2
	else
		dmonth=$(date +%m)
	fi
	ddate="${dmonth}-${dday}"  
fi


while getopts ":ehs" o; do
	case ${o} in
		e)
			opte
			exit
			;;
		h)
			whatis
			exit
			;; 
		s)
			showdays
			selectplus
			;;
		?)
			echo -e "Nein nein nein option ‚Üí ${o}"
			exit
			;;
	esac
    
done
shift $((OPTIND-1))

### MAIN
dmain
