#!/bin/bash

function whatis() {
	echo -e "\e[38;5;118mtype:\e[38;5;118mhugo: \e[38;5;9mOPEN TO EDIT TO USE THIS!!\e[38;5;195m while read lista de archivos â†’ sed"
	echo -e "\tðŸ‘‰\t\e[38;5;43mchugo \e[38;5;228m\$1==\e[38;5;11mmd/html_files \e[38;5;228m\$2==\e[38;5;11mfile-path-relative-to-cifo/content\e[0m"
}
# â™¥
source Asksure.fu
source Opte.fu
while getopts ":eh" o; do 
	case "${o}" in 
		e)
			opte
			exit
			;;
		h)
			whatis
			exit
			;;
	esac
done
shift $((OPTIND-1))

# â™¥

#DIRS
codir="/home/violeta/PROYECTO/estudios/instalacionfotovoltaica"
[[ $2 ]] && subdir=$2
workdir=${codir}/${subdir}   
#FILES
listaordenada=$1
#VARS
# LOOP para editar CONTENT/sub-dirs/SUB-SUB-DIR â‡’  
let count=0
#let pre=-1

if [[ ${listaordenada} ]]; then
	while read -r fileinlista 
	do
		let count=${count}+10
	#   let pre=${pre}+1
	#	titlelimpio=$(sed -ne "/title: /p" ${fileinlista} | sed -ne "s/title: //p" | tr '"' '')
		sed -i "s/draft: true/weight: ${count}/"  ${fileinlista}
	#	sed -i "s/pre =.*/pre = \"<b>${pre}. <\/b>\"/" ${l}/_index.md
	done < ${listaordenada}  
else
	whatis
	exit
fi
