exrc="${maindir}/.exrc"
baseexrc="${binpauxdir}/gametsa.exrc" 
#VARIABLES 
any=false

while getopts ":eha" o; do
	case ${o} in
		e)
			opte
			exit
			;;
		h)
			whatis
			exit
			;;
		a)
			any=true
			;;
		?)
			echo -e "Nein nein nein option → ${o}"
			exit
			;;
	esac
done
shift $((OPTIND-1))

### MAIN 
