#!/bin/bash
clear
function whatis() {
	cuseco=$(basename $0)
    echo -e "\\e[38;5;118m${cuseco}	‚Üí \\e[38;5;11mtype:\\e[38;5;118mvio bas-admin: select, vim, clog, opt ‚Üí sed p"
	echo -e "\\e[38;5;118m ‚áí  \\\e[38;5;195mclog like a pro ‚Üí hay un clog maestro por cada step del d√≠a horariado, y\\e[38;5;212m ${cuseco} \\e[38;5;195mpuede ‚Üí 
	\e[38;5;11m¬ª \\e[38;5;195mselect and vim \\e[38;5;11mel \\e[38;5;208mprimer log.maestro \\e[38;5;11mdel d√≠a ‚≠ê
	\e[38;5;11m¬ª en los entrehorariados \\e[38;5;195mvim el \\e[38;5;208mcurrent log.maestro \\e[38;5;195mpara edit ANTES de cerrarlo, editado con el trabajo reciente, para POSTERIOR VISTAZO antes del trabajo del nuevo d√≠a
		\e[38;5;11m¬ª \\e[38;5;195my seguido select and vim \\e[38;5;208mnuevo log.maestro
	\e[38;5;11m¬ª \\e[38;5;195mY para un \\e[38;5;14m\`vistazo\` \\e[38;5;195men cualquier momento, clop con \\e[38;5;14mave \\e[38;5;195mcomo argumento 
		\e[38;5;11m¬ª \\e[38;5;14mselect and sed-print el √∫ltimo d√≠a
\e[38;5;43m\tüëâ\t\e[38;5;118m${cuseco} ave\e[0m
		‚≠ê \e[38;5;11mMUY IMPORTANTE ‚Üí seguir el procedimiento: 
   		\e[38;5;118m ‚áí  para activar la \\e[38;5;11mSE√ëAL\\e[38;5;118m, una boolean de .bashrc que se flipa con sed en either un script or un alias 
	\e[38;5;11m¬ª \\e[38;5;118mclop \\e[38;5;195mpara empezar: al empezar el d√≠a selecciono un log.maestro, y le hecho un vistazo; la \\e[38;5;11mse√±al \\e[38;5;118mseta al select as \\e[38;5;218mtrue \\e[38;5;11m‚Üí oclog.persistent.history \\e[38;5;118m‚àö‚àö‚àö 
	\e[38;5;11m¬ª \\e[38;5;118mclop \\e[38;5;195ma lo largo del d√≠a: nuevas selecciones, un vistazo, y reseteo de \\e[38;5;11mse√±al, oclog.persistent.history 
	\e[38;5;11m¬ª \\e[38;5;118mclosclo \\e[38;5;195mpara terminar el d√≠a; la \\e[38;5;11mse√±al \\e[38;5;118mseta TODAS a \\e[38;5;218mfalse   
‚ú®\e[38;5;195m Y usar \\e[38;5;43m\`wog\`\\e[38;5;195mpara confirmar\\e[38;5;212m ‚ù§Ô∏èÔ∏è \\n"
}

## SOURCES 
##VARS-FILES 
##FUNCTIONS 
source Opte.fu
source Asksure.fu
source Continua.fu

function vlating() {
	# $1 = bashrc ‚Üí senal ‚Üí currentclop=true
	currentclop=$(echo $1 | awk -F= '{print $1}')
	functionpendig="f.*${currentclop}Pending"
    tolinu=$(grep -n ${functionpendig} /home/violeta/bin/lat)
	linu=$(echo ${tolinu} | awk -F: '{print $1}')
#	echo -e "VLATING ‚Üí 
#	\e[38;5;228m currentclop ‚Üí \t\e[38;5;218m ${currentclop} 
#	\e[38;5;228m tolinu ‚Üí \t\t\e[38;5;218m${tolinu}
#	\e[38;5;228m linu ‚Üí \t\t\e[38;5;218m${linu}
#	\e[38;5;228m functionpendig ‚Üí ${functionpendig}   
#	"  
	vim +${linu} $2
}	


##DIRECTORIES 
clodir=/home/violeta/.clogs/maestros
#prodir=/home/violeta/PROYECTO
##FILES
bashrc=/home/violeta/.bashrc
latfile=/home/violeta/bin/lat
#clogmaestro=""
#VARIABLES

while getopts ":eh" o; do
	case ${o} in
		e)
			opte
			exit
			;;
		h)
			whatis
			exit
			;; 
		?)
			echo -e "Nein nein nein option ‚Üí ${o}"
			exit
			;;
	esac
    
done
shift $((OPTIND-1))

### MAIN 
#si la senal est√° vacia, estamos empezando el d√≠a  y pasamos al select directamente para ‚áí  clomanov primero, then to PROYECTO and lat
senal=$(sed -ne "/^geus=/,/^extendother=/p" /home/violeta/.bashrc | grep true)

#si hay algo: run clomanow (resumen de lo hecho); then vlating con la senal que haya (apuntar lo que se qued√≥ pendiente, y lo nuevo que hay que hacer), y then lat con la nueva senal
if [[ ${senal} != "" ]]; then
	clomanow -v
	vlating ${senal} ${latfile}  
fi

clear
select malo in $(find ${clodir} -type f -name "*maestro" -exec basename {} \; | sed -ne "s/.log.maestro//p" ) 
do
	clomaestro=${clodir}/${malo}.log.maestro 
	if [[ $1 == "ave" ]]; then
		for i in $(grep -n "^<abre-log" ${clomaestro} )
		do
			tolinu=$i
		done
		linu=$(echo ${tolinu} | awk -F: '{print $1}')
		sed -ne "${linu},$ p" ${clomaestro} 
	else
		vim +$ ${clomaestro} 
		if [[ ${malo} != "extend-other" ]]; then
			echo -e "\e[38;5;118mView extend maestro as well??ü§Ø??"
		   if asksure; then
			   echo -e "\e[38;5;195m" 
			   vim ${clodir}/extend-other.log.maestro	   
		   fi
		fi
	fi
	break
done	

clogclop=$([[ ${malo} =~ "-" ]] && echo ${malo} | sed -ne "s/-//gp" || echo ${malo} )
vim -c "call ClopClog(\"${clogclop}\")" -c "wq" ${bashrc}

cd /home/violeta/PROYECTO
bash /home/violeta/bin/lat "${clogclop}"
bash
