#!/bin/bash

regex=$1
tmpfile=$0.tmp
function whatis() {
	cuseco=$(basename $0)
	echo -e "\e[38;5;118m${cuseco} â‡’  \e[38;5;11mtype:\e[38;5;118mvio-helper â‡’  ls for seq wc -l awk sed â‡’  work with files named with whitespaces"
	echo -e "\e[38;5;195m Savo todos files by regex \$1 en un tmp file \e[38;5;11mâ­ los quoto y trabajo con ellos foring el wcl y seding line numbes \e[38;5;11mâ­ \e[38;5;195m mÃ¡s lo que quiera aÃ±adir \e[38;5;212m BETIKO LO EDITO A MANIXA â¤ï¸ï¸ 
	\e[38;5;43m\tðŸ‘‰\t\e[38;5;11m${cuseco} -$o\e[0m"
}

source Asksure.fu
source Opte.fu
source Continua.fu

while getopts ":eh" o; do
	case "${o}" in
		e)
			opte
			exit
			;;
		h)
			whatis
#			echo -e "PENDING whatis!! ðŸ”¥ "
			exit
			;;
		\?)
			echo "invalid option: -$OPTARG"
			exit
			;;
	esac
done
shift $((OPTIND-1))

#MAIN

echo -e "\e[38;5;118m"
read -p "have u opted first ???" anything
continua
ls *${regex}* | xargs -i echo "\"{}\"" >| ${tmpfile} 

for i in $(seq $(wc -l ${tmpfile} | awk '{print $1}'))
do
	dfile=$(sed -ne "${i}p" ${tmpfile})
	# ðŸ‘‰ EDIT HERE 
	# por ejemplo â†’ 
	# read -p "new name â†’ " newname
	# [[ ${newname} =~ "\.mp4" ]] && echo -n "" || newname=${newname}.mp4

done
