function whatis() { #whatis
	cuseco=$(basename $0)
    echo -e "\\e[38;5;118m${cuseco}	→ \\e[38;5;11mtype:\\e[38;5;118mvio-bas admin: alias, ln, bin, PROYECTO"
	echo -e "\\e[38;5;118m ⇒  labour.today\\\e[38;5;195mun s.sh del día \\e[38;5;14msolo funciona within PROYECTO \\e[38;5;11m⭐\\e[38;5;195mtipo fastcd, pero para run la script del day (o del momento) \\e[38;5;11m⭐\\e[38;5;195m \\e[38;5;212m❤️️ \\n\\e[38;5;43m\t👉\t\e[38;5;11m${cuseco} -$o\e[0m"
}

## SOURCES
##FUNCTIONS
source Opte.fu
source Asksure.fu
source Continua.fu

function waiting() {
	echo -e "\e[38;5;195m" 
	while read -r -p "$@ " -n 1 -s answer
	do
		if [[ ${answer} == [gG] ]]; then
			break
		fi
	done
	clomanow -v
}
function espiask() {
	echo -e "espidi??"
	if asksure; then
		espidi
	fi
}
function latsayshello() { #latsayshello
	# 1/ check if in PROYECTO and get lat if there is one
	if [[ ${curdir} =~ "PROYECTO" ]]; then  
		symfs=$(find -L -xtype l)
		haylat=$(echo ${symfs} | sed -ne "s/.*\(lat\).*/\1/p")
		#haylat=$(echo ${symfs} | grep -wo lat )
	else
		echo -e "🔥\e[38;5;11mnot in \e[38;5;118mP⭐R⭐O⭐Y⭐E⭐C⭐T⭐O \e[38;5;212mbaby 💥 💥 💥 "
		exit
	fi	

	# 2/ if in PROYECTO, either show or link lat
	if [[ ${haylat} == ""  ]]; then
		echo -e "\e[38;5;9mNO haylat \e[38;5;118m → pues se linka "
		echo -e "\e[38;5;195mlat script: ${latf}" 	
		ln -s ${latf} 
	else
		echo -e "\e[38;5;14mSÍ haylat → \e[38;5;195m${haylat[0]} "
		echo -e "\e[38;5;228m⭐ \`$1\` \e[38;5;212msays ⚡HELLO⚡⚡ \e[38;5;195m:D!!!!!!!!!!💕"  
	fi
	echo
}

