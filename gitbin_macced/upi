#!/bin/bash

function whatis() {
	cuseco=$(basename $0)
 echo -e "\e[38;5;118m${cuseco}	‚áí 	\\e[38;5;11mtype:\\e[38;5;118mgit ‚áí  add, commit, push pigit"
echo -e "	\\e[38;5;195m automating work @ \\e[38;5;11m‚≠ê\\e[38;5;195m pigit!!!!!!!!!!!!! \\e[38;5;11m‚≠ê\\e[38;5;195m \\e[38;5;212m‚ù§Ô∏èÔ∏è \\n\\e[38;5;43m\tüëâ\t\e[38;5;11m${cuseco} -$o\e[0m"
}

## SOURCES
##VARS-FILES
##FUNCTIONS
source Opte.fu
source Asksure.fu
source GralGetops.fu 
##DIRECTORIES
##FILES
#VARIABLES

### MAIN
while getopts ":eh" o; do
    gralGetops
done
shift $((OPTIND-1))
 
echo -e "‚≠ê \e[38;5;209mCommit all ‚≠ê??????"
if asksure; then
	git add .
else
	echo -e "\e[38;5;195m " 
	read -p "Enter the files, then ‚Üí " dfiles
	git add ${dfiles} 
fi

echo -e "\e[38;5;118m" 
read -p "Commit mess ‚Üí " dmess
git commit -m "${dmess}"

git push pigit
